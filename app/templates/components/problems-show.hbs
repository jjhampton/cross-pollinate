<h1 class="primary-heading">{{model.name}}</h1>
<p class="problem-owner">Owner: {{model.owner.firstName}} {{model.owner.lastName}}</p>
<p class="problem-description">Description: {{model.description}}</p>
<p class="problem-created">Created: {{model.createdAt}}</p>
<p class="problem-deadline">Deadline: {{model.deadline}}</p>
<p class="problem-tags">Tags: {{#each model.tags as |tag|}}{{tag}} {{/each}}</p>
<p class="problem-progress">Progress: {{model.progress}}%</p>
<div class="trello-update">Trello API Data</div>
<span class="problem-collaborations">We collaborate via Trello at: </span>
<p class="problem-trelloURL">{{model.trelloURL}}</p>
<p class="problem-city">City: {{model.city}}</p>
<p class="problem-state">State/Province: {{model.state}}</p>
<p class="problem-country">Country: {{model.country}}</p>
<div class="problem-show-map">Map</div>
<p class="problem-members">Current Team Members: </p>
<ul class="problem-members-list">
  {{#each model.members as |member|}}
  <li class="problem-members-list-item">{{member.firstName}} {{member.lastName}}</li>
  {{/each}}
</ul>
<button class="problem-volunteer" {{action 'addUser' model}}>Volunteer - Join This Team</button>
<input class="problem-email" placeholder="Email the owner w/o joining"><button>Submit</button>
<p>Team Owner:</p>
{{#link-to 'problems.manage' model}}
<button class="problem-button-manage">Manage Team</button>
{{/link-to}}


{{yield}}
