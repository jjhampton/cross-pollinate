<nav class="primary-nav">
  {{#if session.isAuthenticated}}
    <span class="nav-buttons-group">
      <span>Welcome {{session.currentUser.firstName}} {{session.currentUser.lastName}}</span>
      {{#link-to 'index'}}
        <button class="nav-button nav-button-home">Home</button>
      {{/link-to}}
      {{#link-to 'users.show' session.currentUser}}
        <button class="nav-button nav-button-profile">Profile</button>
      {{/link-to}}
      <button {{action 'invalidateSession'}}>Logout</button>
    </span>
  {{else}}
    {{sessions-create}}
  {{/if}}
</nav>
{{outlet}}
